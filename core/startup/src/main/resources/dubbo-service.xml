<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.bky.weixin"/>

    <dubbo:application name="weixin-service" owner="bky"/>
    <dubbo:registry address="${dubbo.registry.address}"/>
    <dubbo:monitor protocol="${dubbo.monitor.protocol}"/>
    <dubbo:protocol name="${dubbo.protocol.name}" port="${dubbo.protocol.port}"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service ref="redisService" interface="com.bky.weixin.redis.api.RedisService" loadbalance="${dubbo.service.loadbalance}"/>


</beans>
